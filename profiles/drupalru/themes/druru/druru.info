;;;;;;;;;;;;;;;;;;;;;
;; Theme Settings
;;;;;;;;;;;;;;;;;;;;;

; Breadcrumbs
; --------------
settings[druru_breadcrumb] = 0
settings[druru_breadcrumb_home] = 0
settings[druru_breadcrumb_title] = 1

; Navbar
; --------------
settings[druru_navbar_position] = 'static-top'
settings[druru_navbar_inverse] = 0

; Region Wells
; --------------
settings[druru_region_well-navigation] = ''
settings[druru_region_well-header] = ''
settings[druru_region_well-help] = ''
settings[druru_region_well-content] = ''
settings[druru_region_well-sidebar_first] = 'well well-sm'
settings[druru_region_well-sidebar_second] = ''
settings[druru_region_well-footer] = ''

; Anchors
; --------------
settings[druru_anchors_fix] = 1
settings[druru_anchors_smooth_scrolling] = 1

; Popovers
; --------------
settings[druru_popover_enabled] = 1
settings[druru_popover_animation] = 1
settings[druru_popover_html] = 0
settings[druru_popover_placement] = 'right'
settings[druru_popover_selector] = ''
settings[druru_popover_trigger]['hover'] = 0
settings[druru_popover_trigger]['focus'] = 0
settings[druru_popover_trigger]['click'] = 'click'
settings[druru_popover_title] = ''
settings[druru_popover_content] = ''
settings[druru_popover_delay] = 0
settings[druru_popover_container] = 'body'

; Tooltips
; --------------
settings[druru_tooltip_enabled] = 1
settings[druru_tooltip_descriptions] = 1
settings[druru_tooltip_animation] = 1
settings[druru_tooltip_html] = 0
settings[druru_tooltip_placement] = 'auto left'
settings[druru_tooltip_selector] = ''
settings[druru_tooltip_trigger]['hover'] = 'hover'
settings[druru_tooltip_trigger]['focus'] = 'focus'
settings[druru_tooltip_trigger]['click'] = 0
settings[druru_tooltip_delay] = 0
settings[druru_tooltip_container] = 'body'

; Advanced
; --------------
settings[druru_bootstrap_cdn] = ''
settings[druru_bootswatch] = ''

; Global
; --------------
settings[toggle_name] = 0
settings[toggle_slogan] = 0
settings[toggle_search] = 1

